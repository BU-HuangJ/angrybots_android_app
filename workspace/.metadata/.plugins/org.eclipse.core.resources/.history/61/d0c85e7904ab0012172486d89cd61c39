package adapters;

import java.util.concurrent.ExecutionException;

import android.os.AsyncTask;

public class AsyncTaskThread<P, V, R> {
	private class Thread extends AsyncTask<P, V, R> {
		@Override
		protected R doInBackground(P... params) {
			return null;
		}
		private Runnable r;
		public Thread(Runnable r) {
			this.r = r;
		}
	}
	private Thread t;
	public AsyncTaskThread(Runnable r) {
		this.t = new Thread(r);
	}
	public R run(P... params) throws InterruptedException, ExecutionException {
		return t.execute(params).get();
	}
}
