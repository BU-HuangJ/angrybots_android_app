package com.group3.angrybots;

import android.os.Bundle;
import android.app.Activity;
import android.content.Intent;
import android.view.Menu;

public class MainActivity extends Activity {
	public enum Faction {
		HUMAN, ROBOT
	}
	public static Faction faction = null;

    @Override
    protected void onCreate(Bundle savedInstanceState) {
        super.onCreate(savedInstanceState);
        setContentView(R.layout.activity_human_home_page);
		adapters.PersistentSettings.populate(this.getApplicationContext());
    }

    @Override
    public boolean onCreateOptionsMenu(Menu menu) {
        // Inflate the menu; this adds items to the action bar if it is present.
        getMenuInflater().inflate(R.menu.activity_human_home_page, menu);
        return true;
    }
    
    @Override
    public void onResume() {
    	super.onResume();
        //Intent intent = new Intent(this, LoginActivity.class);
        
        Intent intent = new Intent(this, RobotHomePage.class);
        //adapters.PersistentSettings.prefs.offlineMode = true;
        //adapters.PersistentSettings.prefs.email = settings.getString("email", "");
        //adapters.PersistentSettings.prefs.password = settings.getString("password", "");
        //adapters.PersistentSettings.prefs.faction = settings.getString("faction", "");
        //adapters.PersistentSettings.prefs.offlineMode = settings.getBoolean("offlineMode", false);
        //adapters.PersistentSettings.prefs.lastLoginAttemptWasSuccessful = settings.getBoolean("lastLoginAttemptWasSuccessful", false);
        //adapters.PersistentSettings.prefs.robotCowboyHat = settings.getBoolean("robotCowboyHat", false);
        //adapters.PersistentSettings.prefs.robotMonocle = settings.getBoolean("robotMonocle", false);
        //adapters.PersistentSettings.prefs.robotMustache = settings.getBoolean("robotMustache", false);
        //adapters.PersistentSettings.prefs.robotTopHat = settings.getBoolean("robotTopHat", false);
		
        //adapters.PersistentSettings.prefs.robot_global_points = settings.getFloat("robot_global_points", 0.0f);
        //adapters.PersistentSettings.prefs.human_global_points = settings.getFloat("human_global_points", 0.0f);
        //adapters.PersistentSettings.prefs.robot_leaderboard = new String[ROBOT_LEADERBOARD_SIZE];
		//for(int i = 0; i < ROBOT_LEADERBOARD_SIZE; i++) {
        //	adapters.PersistentSettings.prefs.robot_leaderboard[i] = settings.getString("robot_leaderboard_"+(Integer.toString(i)), "");
		//}
		adapters.PersistentSettings.prefs.username = "RoboKyle";
		adapters.PersistentSettings.prefs.rank = 84;
		adapters.PersistentSettings.prefs.hits = 15;
		adapters.PersistentSettings.prefs.deaths = 10;
		adapters.PersistentSettings.prefs.points = 6571;
		adapters.PersistentSettings.prefs.play_time = 50 + 12 * 60;

		adapters.PersistentSettings.prefs.achievementCowboyHat = true;
		adapters.PersistentSettings.prefs.achievementMonocle = true;
		adapters.PersistentSettings.prefs.achievementMustache = true;
		adapters.PersistentSettings.prefs.achievementTopHat = true;
        
    	if (MainActivity.faction != null) {
    		switch (MainActivity.faction) {
			case HUMAN:
				intent = new Intent(this, HumanHomePage.class);
				break;
			case ROBOT:
				intent = new Intent(this, RobotHomePage.class);
				break;

			default:
				break;
			}
    	}
        startActivity(intent);
    }
    
}
