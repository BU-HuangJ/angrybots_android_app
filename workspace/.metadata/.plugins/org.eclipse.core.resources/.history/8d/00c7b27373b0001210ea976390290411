package com.group3.angrybots;

import android.app.Activity;

public class SuperMiniGames extends Activity {
	protected void saveResults(int points) {
		if (adapters.PersistentSettings.prefs.offlineMode == false) {
			long mPoints = adapters.NetworkAdapter.getMember().getPoints();
			if (points > 0) {
				mPoints += points;
			}
			adapters.NetworkAdapter.getMember().setPoints(mPoints);
			adapters.NetworkAdapter.save();
			adapters.NetworkAdapter.doAchievements();
		}
	}
}
