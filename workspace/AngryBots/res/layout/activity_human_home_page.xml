<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/human_backgroundmain"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/profile"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_x="48dp"
        android:layout_y="299dp"
        android:background="@drawable/profilebuttonpress"
        android:gravity="center_horizontal"
        android:onClick="angrybotsProfile" />

    <Button
        android:id="@+id/map"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_x="48dp"
        android:layout_y="499dp"
        android:background="@drawable/mapbuttonpress"
        android:onClick="map" />

    <Button
        android:id="@+id/leaderboard"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_x="48dp"
        android:layout_y="199dp"
        android:background="@drawable/leaderboardbuttonpress"
        android:onClick="leaderboard" />
    
    <Button
        android:id="@+id/wiki"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_x="48dp"
        android:layout_y="399dp"
        android:background="@drawable/humanwikibuttonpress"
        android:onClick="humanwiki" />

    <Button
        android:id="@+id/settings"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_x="48dp"
        android:layout_y="599dp"
        android:background="@drawable/settingsbuttonpress"
        android:onClick="settings" />
    
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_x="198dp"
        android:layout_y="34dp"
        android:textSize="37sp" />

</AbsoluteLayout>